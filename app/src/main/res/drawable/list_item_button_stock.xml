<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Borde del boton -->
            <corners android:radius="@dimen/list_item_button_radius"/>
            <stroke android:width="@dimen/list_item_button_stroke"/>

            <!-- Colores del boton -->
            <gradient
                android:startColor="@color/stock_inactive_button_color"
                android:endColor="@color/stock_active_button_color"
                android:angle="45"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Borde del boton -->
            <corners android:radius="@dimen/list_item_button_radius"/>
            <stroke android:width="@dimen/list_item_button_stroke"/>

            <!-- Colores del boton -->
            <solid
                android:color="@color/stock_inactive_button_color"/>

        </shape>
    </item>

</selector>