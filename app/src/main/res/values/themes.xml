<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/AppFont</item>

    </style>

    <!-- BEGIN FONTS -->
    <style name="AppFont">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">3mm</item>
    </style>

    <style name="AppFont.TitleFont" parent="AppFont">
        <item name="android:textSize">7mm</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppFont.ListItemFont" parent="AppFont">
        <item name="android:textSize">3mm</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- END FONTS -->

    <!-- BEGIN BUTTONS STYLES -->
    <style name="AppButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/AppFont</item>
    </style>

    <style name="AppButton.MainShoppingListButton" parent="AppButton">
        <item name="android:background">@drawable/main_button_shopping_list</item>
        <item name="android:textColor" android:state_enabled="false">@color/black</item>
    </style>

    <style name="AppButton.MainStockButton" parent="AppButton">
        <item name="android:background">@drawable/main_button_stock</item>
        <item name="android:textColor" android:state_enabled="false">@color/black</item>
    </style>

    <style name="AppButton.MainStockShoppingListButton" parent="AppButton">
        <item name="android:background">@drawable/main_button_stock_shopping_list</item>
        <item name="android:textColor" android:state_enabled="false">@color/black</item>
    </style>

    <style name="AppButton.NegativeButton" parent="AppButton">
        <item name="android:background">@drawable/button_negative</item>
    </style>

    <style name="AppButton.NeutralButton" parent="AppButton">
        <item name="android:background">@drawable/button_neutral</item>
    </style>

    <style name="AppButton.PositiveButton" parent="AppButton">
        <item name="android:background">@drawable/button_positive</item>
    </style>

    <style name="AppButton.ActionButton" parent="AppButton">
        <item name="android:background">@drawable/button_action</item>
    </style>

    <style name="AppButton.AddUnitButton" parent="AppButton">
        <item name="android:background">@drawable/button_add_unit</item>
    </style>

    <style name="AppButton.RemoveUnitButton" parent="AppButton">
        <item name="android:background">@drawable/button_remove_unit</item>
    </style>
    <!-- END BUTTONS STYLES -->

    <style name="Theme.ShoppingList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShoppingList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShoppingList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>